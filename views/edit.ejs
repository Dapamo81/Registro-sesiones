
<%- include ('partials/head') %>

    <%- include ('partials/header') %>

        <% if(producto){%>
            <div class="container mt-4 w-75">
                <div class="card border-secundary">
                <div class="card-header"> Editar Registro</div>
                <div class="card-body">
                    <form action="/update" method="POST">
                    <input type="hidden" id="referencia" name="referencia" value="<%= producto.referencia %>"> 
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>">
                        </div>
                        <div class="mb-3">
                            <label for="precio" class="form-label">Precio</label>
                            <input type="number" class="form-control" id="precio" name="precio" value="<%= producto.precio %>">
                        </div>
                        <div class="form-group">
                            <label for="stock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="stock" name="stock" value="<%= producto.stock %>">
                        </div>
                        <br>
                        <div class="button-container d-flex gap-2 align-itmes-stretch">                    
                            <button type="submit" class="btn btn-save">Guardar</button>
                            <a href="/admin" class="btn-cancel">Cancelar</a>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        <% } else { %>
            <h1>Producto no encontrado</h1>
        <% } %>

            <%- include ('partials/footer') %>