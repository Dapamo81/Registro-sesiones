<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
    <meta http-equiv ="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Practica_2 De NodeJS</title>
    <link href = "resources/css/style-register.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="register-form">
        <h2>Registro</h2>
        <form action="/register" method ="POST">
            <label for="user">Usuario:</label>
            <input type="text" name="user" placeholder="Ingrese su usuario" required>

            <label for="name">Nombre</label>
            <input type="text" name="name" placeholder="Ingrese su nombre" required>

            <label for="rol">Rol:</label>
            <select name="rol">
                <option value="admin">Administrador</option>
                <option value="user">Usuario</option>
            </select>
            <br>

            <label for="pass">Contraseña:</label>
            <input type="password" name="pass" placeholder="Ingrese su contraseña" required>

            <div class="button-container">               
                <a href="/" class="btn-cancel">Cancelar</a>
                <input type="submit" value= "Guardar" class="btn-save">
            </div>
        </form>
    </div>

<script src='https://cdn.jsdelivr.net/npm/sweetalert2@11'></script>

<% if (typeof alert !== "undefined") { %>
    <script>
        if (typeof Swal !== 'undefined') {
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '/<%= ruta %>';
            });
        }
    </script>
<% } %>




</body>
</html>