<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
    <meta http-equiv ="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Practica_2 De NodeJS</title>
    <link href="/resources/css/style-login.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="login-form">
        <h2>Login</h2>
        <form action="/auth" method ="POST">
            <input type="text" name="user" placeholder="Usuario" required>
            <input type="password" name="pass" placeholder="ContraseÃ±a" required>
            <button type="submit">Login</button>
        </form>
        <a href="/register" class="btn-registro">Registro</a>

        
    </div>
    
    <script src='https://cdn.jsdelivr.net/npm/sweetalert2@10'></script>
    
    <% if (typeof alert !== "undefined") { %>
    <script>
        if (typeof Swal !== 'undefined') {
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(() => {
                window.location = '/<%= ruta %>';
            });
        }
    </script>
<% } %>

</body>
</html>