
<%- include ('partials/head') %>

    <%- include ('partials/header') %>

        <% if(usuario){%>
            <div class="container mt-4 w-75">
                <div class="card border-secundary">
                <div class="card-header"> Editar Registro</div>
                <div class="card-body">
                    <form action="/updateUser" method="POST">
                        <input type="hidden" id="id" name="id" value="<%= usuario.id %>"> 
                        <div class="mb-3">
                            <label for="usuario" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="usuario" name="usuario" value="<%= usuario.usuario %>">
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= usuario.nombre %>">
                        </div>
                        
                        <div class="mb-3">
                            <label for="rol" class="form-label">Rol:</label>
                            <br>
                            <select name="rol">
                                <option value="admin">Administrador</option>
                                <option value="user">User</option>
                            </select>

                        </div>
                        <div class="mb-3">
                            <label for="pass" class="form.label">Contraseña:</label>
                            <br>
                            <input type="password" name="pass" placeholder="Ingrese su contraseña"
                                value="<% if(typeof valores !== 'undefined') { %> <%= valores.pass %> <% } %>">
                            
                        </div>

                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= usuario.email %>">
                        </div>
                        <div class="button-container d-flex gap-2 align-itmes-stretch">                    
                            <button type="submit" class="btn btn-save">Guardar</button>
                            <a href="/admin" class="btn-cancel">Cancelar</a>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        <% } else { %>
            <h1>Producto no encontrado</h1>
        <% } %>

            <%- include ('partials/footer') %>